<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <EditText
        android:id="@+id/etRegistratName"
        android:hint="Имя"
        android:inputType="textPersonName"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="28dp" />
    <EditText
        android:id="@+id/etRegistratLastName"
        android:hint="Фамилия"
        android:inputType="textPersonName"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/etRegistratName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="28dp" />
    <EditText
        android:id="@+id/etRegistratLogin"
        android:hint="Логин"
        android:inputType="textPersonName"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/etRegistratLastName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="28dp" />
    <EditText
        android:id="@+id/etRegistratPassword"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/etRegistratLogin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="28dp" />
    <EditText
        android:id="@+id/etConfirmPassword"
        android:hint="Повтор пароля"
        android:inputType="textPassword"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/etRegistratPassword"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="28dp" />
    <Button
        android:id="@+id/btnRegistratCancel"
        android:text="Cancel"
        android:textColor="@android:color/holo_blue_dark"
        android:onClick="onCancel"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etConfirmPassword"
        android:layout_marginEnd="28dp" />
    <Button
        android:id="@+id/btnRegistratReg"
        android:text="Ok"
        android:textColor="@android:color/holo_green_dark"
        android:onClick="onRegistration"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/btnRegistratCancel"
        android:layout_marginRight="4dp"
        app:layout_constraintTop_toBottomOf="@+id/etConfirmPassword" />

</android.support.constraint.ConstraintLayout>