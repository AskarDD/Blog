<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <EditText
        android:id="@+id/etLoginFragment"
        android:hint="Логин"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="28dp" />

    <EditText
        android:id="@+id/etPasswordFragment"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/etLoginFragment"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="28dp" />
    <Button
        android:id="@+id/btnRegFragment"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_blue_dark"
        android:text="Registration"
        app:layout_constraintTop_toBottomOf="@+id/etPasswordFragment"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="28dp"
        android:onClick="registrate" />
    <Button
        android:id="@+id/btnLoginFragment"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textColor="@android:color/holo_green_dark"
        app:layout_constraintTop_toBottomOf="@+id/etPasswordFragment"
        app:layout_constraintRight_toLeftOf="@+id/btnRegFragment"
        android:layout_marginEnd="8dp"
        android:onClick="authorize" />

</android.support.constraint.ConstraintLayout>